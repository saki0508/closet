<div class="add-post-main">
 <div class="sub-container">
  <h1 class="add-post-title">投稿を編集</h1>

  <%= form_with model:@post, url: post_path(@post.id), method: :patch, local: true do |form| %>
    <div class="add-title">
      <%= form.label :件名 %>
      <%= form.text_field :title, class:"input-title" %>
    </div>

    <div class="add-text">
      <%= form.label :相談内容 %>
      <%= form.text_area :text, class:"input-text" %>
    </div>

    <div class="add-images">
      <%= form.label :画像 %>
      <%= form.file_field :images, class:"add-post-images", multiple: true %>
    </div>

    <div class="add-images">
      <%= form.label :画像 %>
      <%= form.file_field :images, class:"add-post-images", multiple: true %>
    </div>

    <div class="post-submit">
      <%= form.submit '編集する', class:"post-submit-btn" %>
    </div>
  <% end %>
 </div>
</div>
