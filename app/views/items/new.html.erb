<h1>Add Item</h1>

<%= form_with model:@item, url: items_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :item_name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  
  <div>
    <%= form.submit '送信' %>
  </div>
<% end %>